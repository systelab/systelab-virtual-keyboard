{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "skipLibCheck": true,
      "outDir": "./dist/out-tsc",
      "allowJs": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "declaration": false,
      "experimentalDecorators": true,
      "module": "es2020",
      "moduleResolution": "node",
      "importHelpers": true,
      "target": "ES2022",
      "lib": [
        "es2018",
        "dom"
      ],
      "paths": {
        "systelab-virtual-keyboard": [
          "dist/systelab-virtual-keyboard"
        ]
      },
      "useDefineForClassFields": false
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
