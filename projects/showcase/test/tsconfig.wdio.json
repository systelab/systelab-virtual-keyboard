{
    "compileOnSave": true,
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES2022",
        "module": "NodeNext",
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "moduleResolution": "NodeNext",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "node",
            "webdriverio/async",
            "@wdio/jasmine-framework",
            "expect-webdriverio"
        ]
    },
    "include": [
        "**/*.ts"
    ],
    "ts-node": {
        "transpileOnly": true
    }
}
