{
  "name": "systelab-virtual-keyboard",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "node --max_old_space_size=8192 ./node_modules/@angular/cli/bin/ng serve",
    "start-wdio": "node --max_old_space_size=8192 ./node_modules/@angular/cli/bin/ng serve --configuration wdio",
    "build-showcase": "ng build showcase --configuration production",
    "build-lib": "ng build systelab-virtual-keyboard --configuration production",
    "watch": "ng build systelab-virtual-keyboard --watch --configuration development",
    "test-dev": "concurrently --success first --kill-others \"npm run start-wdio\" \"wait-on http://localhost:4200 && npm run execute-wdio-dev\"",
    "test-ci": "concurrently --success first --kill-others \"npm run start-wdio\" \"wait-on http://localhost:4200 && npm run execute-wdio-ci\"",
    "execute-wdio-dev": "npm run wait-for-server && node node_modules/@wdio/cli/bin/wdio ./projects/showcase/test/wdio.conf.dev.ts",
    "execute-wdio-ci": "npm run wait-for-server && node node_modules/@wdio/cli/bin/wdio ./projects/showcase/test/wdio.conf.ci.ts",
    "wait-for-server": "wait-on http://localhost:4200"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "19.2.8",
    "@angular/cdk": "19.2.8",
    "@angular/common": "19.2.8",
    "@angular/compiler": "19.2.8",
    "@angular/core": "19.2.8",
    "@angular/forms": "19.2.8",
    "@angular/platform-browser": "19.2.8",
    "@angular/platform-browser-dynamic": "19.2.8",
    "@angular/router": "19.2.8",
    "@fortawesome/fontawesome-free": "5.15.4",
    "rxjs": "7.8.1",
    "simple-keyboard": "3.7.94",
    "simple-keyboard-layouts": "3.4.7",
    "tslib": "2.6.3",
    "zone.js": "0.14.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "19.2.8",
    "@angular-eslint/builder": "19.3.0",
    "@angular-eslint/eslint-plugin": "19.3.0",
    "@angular-eslint/eslint-plugin-template": "19.3.0",
    "@angular-eslint/schematics": "19.3.0",
    "@angular-eslint/template-parser": "19.3.0",
    "@angular/cli": "19.2.8",
    "@angular/compiler-cli": "19.2.8",
    "@types/jasmine": "5.1.4",
    "@types/node": "20.11.5",
    "@typescript-eslint/eslint-plugin": "7.16.1",
    "@typescript-eslint/parser": "7.16.1",
    "@typescript-eslint/utils": "7.16.1",
    "@wdio/allure-reporter": "7.16.10",
    "@wdio/cli": "7.16.10",
    "@wdio/jasmine-framework": "7.16.6",
    "@wdio/junit-reporter": "7.19.7",
    "@wdio/local-runner": "7.16.10",
    "@wdio/spec-reporter": "7.16.9",
    "@wdio/types": "7.16.3",
    "chromedriver": "138.0.4",
    "colors": "1.4.0",
    "concurrently": "8.2.2",
    "eslint": "8.57.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsdoc": "48.7.0",
